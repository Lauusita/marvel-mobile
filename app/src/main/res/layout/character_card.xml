<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/bg_black"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Imagen del superhéroe con esquinas redondeadas -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/img_pfp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/hero_image" />
        </androidx.cardview.widget.CardView>

        <!-- Información del superhéroe -->
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Nombre del Héroe"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/btn_favorite"
            app:layout_constraintStart_toEndOf="@+id/card_image"
            app:layout_constraintTop_toTopOf="@+id/card_image" />

        <!-- Barras de nivel/poder (como en la imagen de referencia) -->
        <View
            android:id="@+id/power_bar_1"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/marvel"
            app:layout_constraintStart_toStartOf="@+id/txt_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_name" />

        <View
            android:id="@+id/power_bar_2"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:background="@color/hint"
            app:layout_constraintStart_toEndOf="@+id/power_bar_1"
            app:layout_constraintTop_toTopOf="@+id/power_bar_1" />

        <!-- Información adicional del héroe (similar a la imagen de referencia) -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_name"
            app:layout_constraintTop_toBottomOf="@+id/power_bar_1" />

        <!-- ID del personaje en cursiva -->
        <TextView
            android:id="@+id/txt_character_id_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="#123456"
            android:textColor="@color/hint"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/divider" />
            
        <!-- Primera fila de características
        <View
            android:id="@+id/attribute_1"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/hint"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/txt_character_id_display" />

        <View
            android:id="@+id/attribute_2"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:background="@color/hint"
            app:layout_constraintBottom_toBottomOf="@+id/attribute_1"
            app:layout_constraintStart_toEndOf="@+id/attribute_1"
            app:layout_constraintTop_toTopOf="@+id/attribute_1" />
         -->
        <!-- Segunda fila de características
        <View
            android:id="@+id/attribute_3"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/hint"
            app:layout_constraintStart_toStartOf="@+id/attribute_1"
            app:layout_constraintTop_toBottomOf="@+id/attribute_1" />

        <View
            android:id="@+id/attribute_4"
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:background="@color/hint"
            app:layout_constraintBottom_toBottomOf="@+id/attribute_3"
            app:layout_constraintStart_toEndOf="@+id/attribute_3"
            app:layout_constraintTop_toTopOf="@+id/attribute_3" />
          -->

        <!-- Botón de saber más/detalles -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            app:fabSize="mini"
            app:tint="@color/white"
            app:backgroundTint="@color/marvel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

        <!-- Campos ocultos para mantener compatibilidad con el código existente -->
        <TextView
            android:id="@+id/txt_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_series"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_comics"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_stories"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>