<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".fragments.HomeFragment">

    <!-- Utilizamos un LinearLayout vertical para organizar los elementos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        
        <!-- Título "Heroes" -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/heroes"
            android:textColor="@color/marvel"
            android:textSize="36sp"
            android:textStyle="bold" />
    
        <!-- RecyclerView con las tarjetas de héroes -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_users"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            tools:listitem="@layout/character_card" />
            
    </LinearLayout>
</FrameLayout>